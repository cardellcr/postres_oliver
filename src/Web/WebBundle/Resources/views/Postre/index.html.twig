{% extends 'WebWebBundle::layout.html.twig' %}

{% block stylesheets %} 
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block menu %} 
{% endblock %}

{% block content %}																							
    <h1>Postre list</h1>
    
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Foto</th>
                <th>Foto_thumb</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('postre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.foto }}</td>
                <td>{{ entity.fotothumb }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('postre_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('postre_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <ul>
        <li>
            <a href="{{ path('postre_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

{% endblock %}