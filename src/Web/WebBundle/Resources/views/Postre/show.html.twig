{% extends 'WebWebBundle::layout.html.twig' %}

{% block stylesheets %} 
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block menu %} 
    <div class="menu">
       <a href="{{ path('index') }}">{% trans %}Index{% endtrans %}</a>
       <a href="{{ path('cataleg') }}">{% trans %}Cat√†leg{% endtrans %}</a>
       <a class="active" href="{{ path('contacte') }}">{% trans %}Contacte{% endtrans %}</a>
    </div>
{% endblock %}

{% block content %}																							
    <h1>Postre</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ entity.foto }}</td>
            </tr>
            <tr>
                <th>Foto_thumb</th>
                <td>{{ entity.fotothumb }}</td>
            </tr>
        </tbody>
    </table>
    
    <ul class="record_actions">
        <li>
            <a href="{{ path('postre') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('postre_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('postre_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>

{% endblock %}